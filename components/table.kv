<CLabel@MDLabel>:
  padding: dp(10)
  halign: "center"
  font_name: "HackNerdFont"
  font_size: 22
  color: "black"
  
<DriverDataRow>:
  bold: True
  md_bg_color: 1,1,1,1
  canvas:
    Color:
      rgba:(0,0,0,0.8)
    Line:
      width: 1 
      points:(self.x,self.height,self.x,self.y,self.width,self.y,self.width,self.height)
  CLabel:
    id : code
    text: str(self.parent.code)
    adaptive_width: True
    size_hint_x:0.5
  CLabel:
    id : nom
    text: self.parent.nom
    size_hint_x: 2
  CLabel:
    text: self.parent.prenom 
    size_hint_x: 2
  CLabel:
    size_hint_x: 2
    id: data_cell
    text: self.parent.nom_fourniseur
  MDAnchorLayout:
    spacing:10
    size_hint_x:2
    anchor_x:"center"
    anchor_y: "center"
    MDBoxLayout:
      adaptive_size:True
      padding: dp(10)
      spacing:20
      MDIconButton:
        pos_hint:{"center_y":0.5}
        md_bg_color:"green"
        icon: "eye"
        on_release: 

      MDIconButton:
        pos_hint:{"center_y":0.5}
        md_bg_color:"orange"
        icon: "text-box-edit"
        on_release: app.root.current_screen.open_modal(code.text,update=True)
      MDIconButton:
        icon:"delete"
        pos_hint:{"center_y":0.5}
        md_bg_color:"red"
        on_release: app.root.current_screen.delete_driver(code.text)
 
<SupplierDataRow>:
  bold: True
  md_bg_color: 1,1,1,1
  canvas:
    Color:
      rgba:(0,0,0,0.8)
    Line:
      width: 1 
      points:(self.x,self.height,self.x,self.y,self.width,self.y,self.width,self.height)
  CLabel:
    id : code
    text: str(self.parent.code)
    adaptive_width: True
    size_hint_x:0.5
  CLabel:
    id : nom
    text: self.parent.nom
    size_hint_x: 2
  CLabel:
    text: self.parent.telephone 
    size_hint_x: 2
  CLabel:
    size_hint_x: 2
    id: data_cell
    text: self.parent.adresse
  MDAnchorLayout:
    spacing:10
    size_hint_x:2
    anchor_x:"center"
    anchor_y: "center"
    MDBoxLayout:
      adaptive_size:True
      padding: dp(10)
      spacing:20
      MDIconButton:
        pos_hint:{"center_y":0.5}
        md_bg_color:"green"
        icon: "eye"
        on_release: app.root.current_screen.detail_supplier(code.text)

      MDIconButton:
        pos_hint:{"center_y":0.5}
        md_bg_color:"orange"
        icon: "text-box-edit"
        on_release: app.root.current_screen.open_modal(code=code.text,update=True)
      MDIconButton:
        icon:"delete"
        pos_hint:{"center_y":0.5}
        md_bg_color:"red"
        on_release: app.root.current_screen.delete_supplier(code.text)
      

<RV>:
  viewclass: 'SupplierDataRow'
  RecycleBoxLayout: 
    default_size_hint:1,None
#default_size:None,100 
    size_hint_y: None 
    pos_hint:{"center_x":0.5,"center_y":0.5}
    height: self.minimum_height
    orientation: 'vertical'


