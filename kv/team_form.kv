#:import Rotation team.models.Rotation
#:import Ligne ligne.models.Ligne
#:import Driver driver.models.Driver
#:import Supplier supplier.models.Supplier
<TeamForm>:
  id:id_create_form
  spacing:30
  pos_hint:{"center_x":0.5,"center_y":0.5}
  orientation:"vertical"
  size_hint:0.6, None
  height:self.minimum_height
  padding:50
  code : "" if not root.data else str(root.data["code"])
  MDTextField:
    id: id_nom
    hint_text: "enter name"
    text: "" if not root.data else root.data["nom"]
  MDTextField:
    id: id_rotation
    hint_text: "add Rotation"
    text : "" if not root.data else root.data["nom_rotation"]
    value: "" if not root.data else root.data["code_rotation"]
    on_focus: if self.focus : root.get_menu_list(self,Rotation)
  MDTextField:
    id: id_ligne
    hint_text: "add ligne"
    text : "" if not root.data else root.data["nom_ligne"]
    value: "" if not root.data else root.data["code_ligne"]
    on_focus: if self.focus : root.get_menu_list(self,Ligne)
  MDTextField:
    id: id_chauffeur
    hint_text: "add chauffeur"
    text : "" if not root.data else root.data["nom_chauffeur"]
    value: "" if not root.data else root.data["code_chauffeur"]
    on_focus: if self.focus : root.get_menu_list(self,Driver)
  MDTextField:
    id: id_fourniseur
    disabled : True
    hint_text: "add fourniseur"
    text : "" 
    value: ""

  MDBoxLayout
    id: id_btn_list
    pos_hint:{"right":1}
    adaptive_size: True
    spacing:30
    MDRectangleFlatButton:
      text: "Cancel"
      on_release: app.root.current_screen.dialog_close()


<RotationForm>:
  id:id_rotation_form
  spacing:50
  pos_hint:{"center_x":0.5,"center_y":0.5}
  orientation:"vertical"
  size_hint:0.6, None
  height:self.minimum_height
  padding:50
  MDTextField:
    id: id_nom
    hint_text: "enter name"
    text: root.nom
  MDBoxLayout
    id: id_btn_list
    pos_hint:{"right":1}
    adaptive_size: True
    spacing:30
    MDRectangleFlatButton:
      text: "Cancel"
      on_release: app.root.current_screen.dialog_close()





