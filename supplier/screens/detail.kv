<M3@MDLabel>:
  color: "black"
  bold: True
  italic: True
  pos_hint:{"center_x":0.5,}
  font_size:32
  adaptive_size:True


<SupplierDetailScreen>:
  id: id_supplier_screen
  MDBoxLayout:
    id : id_main_wrapper
    orientation: "horizontal"
    Sidebar:
      id: id_sidebar
            
