
<SupplierDetailScreen>:
  MDFloatLayout:
    MDCard
      id:id_create_form
      spacing:50
      padding:50
      pos_hint:{"center_x":0.5,"center_y":0.5}
      size_hint: 0.6,None
      height: self.minimum_height
      orientation:"vertical"
      MDTextField:
        id: id_nom
        hint_text: "enter name"
        text: root.nom
      MDTextField:
        id: id_telephone
        hint_text: "enter phone number"
        text: root.telephone
      MDTextField:
        id: id_adresse
        hint_text: "enter adresse"
        text: root.adresse
      MDRectangleFlatButton:
        text: "Create Supplier"
        on_release: root.create_supplier(id_create_form)


